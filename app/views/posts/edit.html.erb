<h3><%= @post.id %>번 글 수정</h3>

<form action="/posts/update/<%= @post.id %>" method="POST">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="post_title">제목</label>
    <input type="text" name="title" value="<%= @post.title %>" id="post_title">
    <br>
    <label for="post_content">제목</label>
    <textarea name="content" id="post_content"><%= @post.content %></textarea>
    <button type="submit">제출</button>
</form>